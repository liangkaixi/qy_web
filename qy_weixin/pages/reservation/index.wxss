.reservation-container {
  max-width: 600rpx;
  margin: 24rpx auto 0;
  padding: 32rpx 20rpx 28rpx 20rpx;
  background: linear-gradient(135deg, #f5fafd 60%, #e0f7fa 100%);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(64, 158, 255, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sport-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #222;
  letter-spacing: 2rpx;
  margin-bottom: 28rpx;
  text-align: center;
  text-shadow: 0 2rpx 8rpx #e0ecff;
}
.type-btn-group,
.area-btn-group,
.court-btn-group,
.duration-btn-group {
  display: flex;
  gap: 16rpx;
  margin-bottom: 18rpx;
  flex-wrap: wrap;
  justify-content: center;
}
.date-select {
  width: 220rpx;
  padding: 10rpx 16rpx;
  border-radius: 14rpx;
  border: 2rpx solid #b2ebf2;
  font-size: 28rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #e3f2fd 60%, #b2ebf2 100%);
  color: #222;
  box-shadow: 0 2rpx 8rpx rgba(64, 158, 255, 0.08);
  transition: border 0.2s;
  outline: none;
  margin-bottom: 18rpx;
  text-align: center;
}
.type-btn,
.area-btn,
.court-btn,
.duration-btn,
.submit-btn,
.slot-btn {
  min-width: 110rpx;
  padding: 12rpx 0;
  border: none;
  border-radius: 18rpx;
  background: linear-gradient(90deg, #e3f2fd 60%, #b2ebf2 100%);
  color: #222;
  font-size: 28rpx;
  font-weight: 700;
  margin: 0 8rpx 8rpx 0;
  transition: background 0.2s, box-shadow 0.2s, color 0.2s, transform 0.1s;
  box-shadow: 0 2rpx 8rpx rgba(64, 158, 255, 0.08);
  position: relative;
}
.type-btn.active,
.area-btn.active,
.court-btn.active,
.duration-btn.active,
.submit-btn:active,
.slot-btn.active {
  background: linear-gradient(90deg, #409eff 60%, #67c23a 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(64, 158, 255, 0.18);
  transform: scale(1.08);
}
.type-btn:hover,
.area-btn:hover,
.court-btn:hover,
.duration-btn:hover,
.submit-btn:hover,
.slot-btn:hover {
  background: linear-gradient(90deg, #b2ebf2 60%, #e3f2fd 100%);
  color: #222;
}
.type-icon {
  margin-right: 6rpx;
  font-size: 32rpx;
}
.slots-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 18rpx;
  justify-content: center;
}
.slot-btn {
  min-width: 70rpx;
  padding: 10rpx 0;
  border: none;
  border-radius: 12rpx;
  background: linear-gradient(90deg, #e0f7fa 60%, #b2ebf2 100%);
  color: #222;
  font-size: 24rpx;
  font-weight: 600;
  margin: 0 6rpx 6rpx 0;
  transition: background 0.2s, color 0.2s, transform 0.1s;
  box-shadow: 0 2rpx 8rpx rgba(64, 158, 255, 0.08);
}
.slot-btn.active {
  background: linear-gradient(90deg, #ff9800 60%, #409eff 100%);
  color: #fff;
  transform: scale(1.08);
}
.slot-btn.reserved,
.slot-btn[disabled] {
  background: #ececec;
  color: #bbb;
  text-decoration: line-through;
}
.phone-input {
  width: 100%;
  padding: 12rpx;
  border-radius: 12rpx;
  border: 2rpx solid #b2ebf2;
  margin-bottom: 18rpx;
  font-size: 28rpx;
  transition: border 0.2s;
}
.submit-btn {
  width: 100%;
  background: linear-gradient(90deg, #409eff 60%, #67c23a 100%);
  color: #fff;
  border: none;
  border-radius: 18rpx;
  padding: 14rpx;
  font-size: 32rpx;
  font-weight: 800;
  margin-top: 8rpx;
  transition: box-shadow 0.2s, background 0.2s;
  box-shadow: 0 2rpx 8rpx rgba(64, 158, 255, 0.12);
}
.submit-btn:hover {
  box-shadow: 0 4rpx 16rpx rgba(64, 158, 255, 0.18);
  background: linear-gradient(90deg, #67c23a 60%, #409eff 100%);
}
.message {
  margin-top: 18rpx;
  color: #f56c6c;
  font-size: 28rpx;
  text-align: center;
  font-weight: 700;
}
.error-msg {
  margin-top: 12rpx;
  color: #ff9800;
  font-size: 24rpx;
  text-align: center;
  font-weight: 700;
}
