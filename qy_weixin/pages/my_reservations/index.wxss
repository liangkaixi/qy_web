.my-reservations-page {
  min-height: 100vh;
  background: linear-gradient(120deg, #e3eefe 0%, #b2ebf2 100%);
  padding: 32rpx 16rpx;
}
.reservation-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(64,158,255,0.08);
  margin-bottom: 24rpx;
  padding: 24rpx;
}
button {
  margin-top: 12rpx;
  background: linear-gradient(90deg, #ff4d4f 60%, #409eff 100%);
  color: #fff;
  border-radius: 10rpx;
}
