/* 创建游戏页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(120deg, #5a8dee 0%, #6fd6ff 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
}
.form-section {
  width: 92%;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 40rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(90, 141, 238, 0.1),
    0 1.5rpx 4rpx rgba(111, 214, 255, 0.1);
  padding: 36rpx 28rpx 28rpx 28rpx;
  margin-bottom: 32rpx;
}
.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
}
.label {
  width: 120rpx;
  font-weight: 700;
  color: #3575ec;
  font-size: 32rpx;
}
.picker {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #3575ec;
  border-radius: 28rpx;
  background: rgba(255, 255, 255, 0.7);
  color: #3575ec;
  font-size: 32rpx;
  font-weight: 700;
  margin-left: 18rpx;
}
.section-title {
  font-weight: 900;
  margin-bottom: 18rpx;
  font-size: 40rpx;
  color: #3575ec;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 8rpx #e3eefe;
  width: 92%;
}
.permission-tabs {
  display: flex;
  width: 92%;
  margin-bottom: 12rpx;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 20rpx;
  background: #f5faff;
  color: #3575ec;
  font-size: 32rpx;
  font-weight: 700;
  margin-right: 12rpx;
  transition: all 0.18s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2rpx solid transparent;
}
.tab:last-child {
  margin-right: 0;
}
.tab.active {
  background: linear-gradient(90deg, #3575ec 0%, #6fd6ff 100%);
  color: #fff;
  border: 2rpx solid #3575ec;
  box-shadow: 0 8rpx 32rpx rgba(90, 141, 238, 0.18);
  text-shadow: 0 2rpx 8rpx #6fd6ff;
}
.permission-tip {
  width: 92%;
  color: #888;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}
.advanced-setting {
  width: 92%;
  display: flex;
  align-items: center;
  color: #3575ec;
  font-size: 32rpx;
  margin-bottom: 32rpx;
  text-decoration: underline;
}
.submit-btn {
  width: 92%;
  margin: 36rpx auto 0 auto;
  display: block;
  background: linear-gradient(90deg, #3575ec 0%, #6fd6ff 100%);
  color: #fff;
  font-size: 40rpx;
  font-weight: 900;
  border-radius: 999rpx;
  padding: 36rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(90, 141, 238, 0.18), 0 2rpx 8rpx #fff inset;
  border: none;
  transition: all 0.18s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 8rpx #6fd6ff;
}
.submit-btn:active {
  background: linear-gradient(90deg, #6fd6ff 0%, #3575ec 100%);
  transform: scale(0.97);
  box-shadow: 0 2rpx 8rpx rgba(90, 141, 238, 0.12), 0 2rpx 8rpx #fff inset;
}
